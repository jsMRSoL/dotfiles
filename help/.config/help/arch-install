# Host github.com
#    IdentityFile ~/.ssh/github_rsa

## Set up home directory from git
useradd -m simon
su simon
mkdir .local .config .vim .vim/bundle .emacs.d
git clone https://github.com/jsMRSoL/dotfiles.git ~/.dotfiles
cd ~/.dotfiles && stow *
# this contains my api keys and ssh keys
git clone simon@ant:/mnt/media/git/private.git ~/.private
# Return to root
exit
cp /home/simon/.dotfiles/suckless/.config/suckless/dwm/dwm.desktop /usr/share/xsessions/
