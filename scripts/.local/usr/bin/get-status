#!/bin/bash

INT="$(get-internet-connectivity)"
VOL="$(get-system-volume)"
IP=$(for i in $(ip r); do echo $i; done | grep -A 1 src | tail -n1)
TEMP="$(get-system-temperature)"
BRIGHTNESS="$(brightness.sh get)"
# Already visibile in tmux
# LOCALTIME="$(get-local-time)"
BAT="$(get-battery)"

# echo " $INT $IP | $BAT | $VOL | $TEMP | $BRIGHTNESS | $LOCALTIME"
echo " $INT $IP | $BAT | $VOL | $TEMP | $BRIGHTNESS "
